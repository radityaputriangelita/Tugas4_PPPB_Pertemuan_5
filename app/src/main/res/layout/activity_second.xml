<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    tools:context=".ThirdActivity">

    <TextView
        android:id="@+id/homepage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="Homepage"
        android:textSize="24dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/wecomeAndUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/homepage">
        <TextView
            android:id="@+id/Welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Welcome"
            android:layout_below="@id/homepage"
            android:layout_marginTop="20dp"
            android:layout_marginRight="5dp"/>
        <TextView
            android:id="@+id/welcome_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Username"
            android:layout_below="@id/homepage"
            android:layout_marginTop="20dp"
            android:textColor="@color/light_blue"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/emailAndActivated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wecomeAndUsername">
        <TextView
            android:id="@+id/active_email_your"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Your"
            android:layout_marginTop="20dp"
            android:layout_marginRight="5dp"/>
        <TextView
            android:id="@+id/active_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Email"
            android:layout_marginTop="20dp"
            android:textColor="@color/light_blue"/>
        <TextView
            android:id="@+id/active_email_hasbeenactivated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="has been activated"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailAndActivated">
        <TextView
            android:id="@+id/active_phone_your"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Your"
            android:layout_marginTop="20dp"
            android:layout_marginRight="5dp"/>
        <TextView
            android:id="@+id/active_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Phone"
            android:layout_marginTop="20dp"
            android:textColor="@color/light_blue"/>
        <TextView
            android:id="@+id/regist_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="has been registered"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>


</RelativeLayout>
